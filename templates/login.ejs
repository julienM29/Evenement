<%- include('./shared/header.ejs') %>
    <link href="/styleFormLogin.css" rel="stylesheet">

    <body>
        <div class="min-vh-100 w-100 d-flex justify-content-center flex-column"
            style="background-color: rgb(242, 243, 243); margin-left: 14%;">

            <div class="form-body">
                <div class="">
                    <div class="form-holder">
                        <div class="form-content-login">
                            <div class="form-items">
                                <h3 class="mb-4 d-flex justify-content-center w-100">Connexion</h3>

                                <form action="/login" method="post">
                                    <div class="col-md-12">
                                        <input class="form-control <% if ( errorEmail !== null) { %> mb-1<% } %>" type="email" name="email"
                                            placeholder="Adresse e-mail" <% if ( email !== null) { %> value="<%= email %>"<% } %> required>
                                        <div class="valid-feedback">Email field is valid!</div>
                                        <% if ( errorEmail !== null) { %>
                                            <div class="text-danger fs-5 fst-italic mb-3">
                                                <%= errorEmail %>
                                            </div>
                                            <% } %>
                                    </div>
                                    <div class="col-md-12">
                                        <input class="form-control <% if ( errorMDP !== null) { %> mb-1<% } %>" type="password" name="password"
                                            placeholder="Mot de passe" required>
                                        <div class="valid-feedback">Password field is valid!</div>
                                        <% if ( errorMDP !== null) { %>
                                            <div class="text-danger fst-italic fs-5 mb-3">
                                                <%= errorMDP %>
                                            </div>
                                            <% } %>
                                                                            </div>
                                    <div class="form-button mt-3">
                                        <button id="submit" type="submit"
                                            class="btn btn-primary">Connectez-vous</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <%- include('./shared/footer.ejs') %>