<div class="container mt-5" style="width:40%;">
    <div class="col mb-3">
        <div class="card border-0">
            <div class="card-body">

                <div class="w-100 position-relative overflow-hidden hover-zoom-bg image-container">
                    <img src="http://localhost:3000/images/<%= evenement.photo %>" class=" hover-zoom"
                        style="max-height: 471px;">
                </div>

                <h5 class="fs-2 card-title mt-2 mb-3 text-center">
                    <%= evenement.titre %>
                </h5>
                
                <p class="fs-4 card-text">
                    <%= evenement.description%>
                </p>
                <p class="card-text">

                </p>
                <div class="w-100 d-flex justify-content-between mb-2">
                    <div>Lieu : <%= evenement.lieu %>
                    </div>

                </div>
                <div class="w-100 mb-2 ">
                    <div>L'évènement se déroulera du <%= evenement.date_debut_evenement %>
                            au <%= evenement.date_fin_evenement %>
                    </div>
                </div>
                <div class="w-100 d-flex justify-content-between mb-2 ">
                    <div>Date limite d'inscription : <%= evenement.date_final_inscription %>
                    </div>
                </div>

                <div> Organisateur : <%= evenement.organisateurNom %>
                        <%= evenement.organisateurPrenom %>
                </div>
                <div class="w-100 d-flex justify-content-between mb-2 ">
                    <div> Nombres de participants maximum : <%= evenement.nb_participants_max %>
                    </div>
                    <div> Places disponibles : <%= evenement.places_dispo %>
                    </div>
                </div>
                <% if (locals.user.id===evenement.organisateur_id) { %>
                    <div class="w-100 d-flex justify-content-center">
                        <button type="button"
                            class="mt-2 mb-3  d-flex align-items-center justify-content-center p-1 border rounded-pill border-dashed-inscription bg-white"
                            style="width:40%;">
                            <a href="/modifierEvenement/<%= evenement.id %>"
                                class="fs-5 fw-bold text-dark text-decoration-none d-flex align-items-center">
                                Modifier l'évènement
                                <svg class="ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg"
                                    fill="none" viewBox="0 0 14 10" width="40" height="20">
                                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
                                        stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9" />
                                </svg>
                            </a>
                        </button>
                    </div>
                    <% } %>
                        <% if (locals.user.id !==evenement.organisateur_id) { %>

                            <div class="w-100 d-flex justify-content-center">
                                <% if (participation===false) {%>
                                    <form action="/evenement/<%= evenement.id %>" method="POST"
                                        class="mt-2 mb-3 d-flex align-items-center justify-content-center"
                                        style="width: 60%;">
                                        <button type="submit"
                                            class="p-1 border rounded-pill border-dashed-inscription bg-white w-50 d-flex justify-content-center">
                                            <span class="fs-5 fw-bold text-dark d-flex align-items-center">
                                                Inscription
                                                <svg class="ms-2" aria-hidden="true"
                                                    xmlns="http://www.w3.org/2000/svg" fill="none"
                                                    viewBox="0 0 14 10" width="40" height="20">
                                                    <path stroke="currentColor" stroke-linecap="round"
                                                        stroke-linejoin="round" stroke-width="2"
                                                        d="M1 5h12m0 0L9 1m4 4L9 9" />
                                                </svg>
                                            </span>
                                        </button>
                                    </form>
                            </div>
                            <% } %>
                                <% if (participation===true) {%>
                                    <a href="/desinscription/<%= evenement.id %>" class="text-decoration-none mt-3 mb-2 px-3 py-2 border rounded-pill border-dashed-inscription bg-white fs-5 fw-bold text-dark d-flex align-items-center">
                                        Se désinscrire
                                    </a>
                                       
                                    <% } %>
                                <% } %>
            </div>
        </div>
    </div>
</div>