<div class="card">
    <div class="card-body">
       
        <img src="images/<%= evenement.photo %>" class="w-25">

    <h5 class="card-title">
        <%= evenement.titre %>
    </h5>
    <p class="card-text">
        <%= evenement.description.split("\n\n")[0].substring(0, 150)%>...
    </p>
    <p class="card-text">
        <%= evenement.lieu %>
    </p>
    <div class="w-100 text-right">
        Date limite d'inscription : <%= evenement.date_final_inscription %>
    </div>
    <div class="w-100 text-right">
        Date de l'évènement : <%= evenement.date_evenement %>
    </div>
    <div class="w-100 text-right">
        Organisateur : <%= evenement.organisateur.nom %>
            <%= evenement.organisateur.prenom %>
    </div>
    <div>
        <% evenement.motsCles.forEach((motCle, index)=> { %>
            <%= motCle.nom %>
                <% if (index < evenement.motsCles.length - 1) { %>,<% } %>
                        <% }) %>
    </div>
    <a href="/evenement/<%= evenement.id %>" class="btn btn-secondary">Modifier votre évènement</a>
</div>
</div>