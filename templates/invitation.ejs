<%- include('./shared/header.ejs', {title: 'Bienvenue sur mon blog' })%>
    <div class=" w-100 d-flex justify-content-center" style="background-color: rgb(242, 243, 243);">
        <div class="mt-5 w-50  d-flex flex-column ">
            <div id="nouveau">
                <div class="fw-bold fs-2">Nouveau</div>
                <div class=" d-flex flex-column align-items-center bg-white border rounded py-2"
                    id="conteneurNotifications">
                    <% for (const invitationNonLus of invitationsNonLus) { %>
                        <div class=" text-center nouvellesNotifications  w-100 border-bottom px-4 py-3">
                            <a href="/evenement/<%= invitationNonLus.evenement_id%>" class="text-decoration-none text-black">
                                <div class="d-flex justify-content-center">
                                    <div class="d-flex image-containerTest">
                                        <img class="rounded-circle border border-secondary p-1"
                                            src="/images/<%=invitationNonLus.photo %>" width="70" height="70">
                                    </div>
                                    <div class="w-50 d-flex flex-column justify-content-center px-3">
                                        <div class="d-flex ">
                                            <div class="me-2 fw-bold fs-5">
                                                <%=invitationNonLus.invitant %>
                                            </div>
                                            <div class="fs-5"> vous invite à participer à :</div>
                                        </div>
                                        <div class="fw-bold d-flex justify-content-start fs-5">
                                            <%=invitationNonLus.titre %>
                                        </div>
                                    </div>
                                    <div class="fs-5 d-flex flex-column">
                                        <div>
                                            <%=invitationNonLus.date.jour %>
                                                <%=invitationNonLus.date.moisNom %>
                                        </div>
                                        <div class=" fs-5 d-flex aling-items-start">
                                            <%=invitationNonLus.date.heures %>:<%=invitationNonLus.date.minutes %>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                        <% } %>
                </div>
            </div>
        </div>

    </div>

    <%- include('./shared/footer.ejs')%>