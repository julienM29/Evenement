<%- include('./shared/header.ejs', {title: 'Bienvenue sur mon blog' })%>

    <div class=" w-100 d-flex flex-column justify-content-center" style="background-color: rgb(242, 243, 243);">
        <h1 class="d-flex justify-content-center mb-4"> Modification profil</h1>
        <% if (locals.user) {%>
            <form action="" method="post" enctype="multipart/form-data">
                <div class="form-group mb-2">
                    <label class="mb-2" for="nom">Nom de l'utilisateur</label>
                    <input type="text" class="form-control" name="nom" id="nom" value="<%= userProfil.nom %>">
                </div>
                <div class="form-group mb-2">
                    <label class="mb-2" for="prenom">Pr√©nom de l'utilisateur</label>
                    <input type="text" class="form-control" name="prenom" id="prenom" value="<%= userProfil.prenom %>">
                </div>
                <div class="form-group mb-2">
                    <label class="mb-2" for="email">Email</label>
                    <input type="email" class="form-control" name="email" id="email" value="<%= userProfil.email%>">
                </div>
                <div class="form-group mb-2">
                    <label class="mb-2" for="photo">Photo de profil</label>
                    <input type="file" class="form-control" name="photo" id="photo">
                </div>
                <div class="w-100 d-flex justify-content-center">
                    <button class=" mt-3 btn btn-primary mb-3"> Modifier le profil</button>

                </div>
            </form>
            <% } %>
    </div>
    <%- include('./shared/footer.ejs')%>